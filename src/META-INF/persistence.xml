<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
  <persistence-unit name="myDB">  
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
<!--       <class>com.supinfo.supmessaging.entity.User</class> -->
      <properties>
          <property name="entitymanager.packages.to.scan" value="fr.coolStudio.supTrip.bo" />
          <property name="hibernate.format.sql" value="true"/>
          <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
          <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/suptrip" />
          <property name="javax.persistence.jdbc.user" value="root" />
          <property name="javax.persistence.jdbc.password" value=""/>
          
          <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
          <property name="hibernate.hbm2ddl.auto" value="update"/>
      </properties>
  </persistence-unit>
</persistence>